<!DOCTYPE html>
<html>
    <head>
        <title>Invalid chat <%= invId %></title>
        <meta charset="UTF-8" />
        <meta http-equiv="Content-Type" const="text/html;charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" href="/img/favicon.png" sizes="any" type="image/png" />
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
        <link rel="stylesheet" type="text/css" href="/css/style.css" />
        <script src="/js/jquery.js"></script>
        <script src="/js/script.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js'></script>
    </head>
    <body>
        <div style="width:40%;margin-left:auto;margin-right:auto;padding-left:15px;padding-right:15px">
            <div style="width:100%;margin:0;padding:50% 0;">
                <div style="border:1px solid #ccc;border-radius:5px;padding:10px">
                    <h2 style="text-align: center;"><i><%= invId %></i> is not a valid chat</h2>
                    <button style="float: right;" class="btn btn-login" onclick="$('#login').dialog('open');">Login</button>
                    <p>Try <a href="https://chatbx.herokuapp.com/chats">https://chatbx.herokuapp.com/chats</a> for a list of chats</p>
                    <p id="create" style="display: none;">Or <button class="btn btn-outline-primary" onclick="$('#createChat').dialog('open');">create</button> a chat</p>
                </div>
            </div>
        </div>
        <div id="createChat" title="create a chat">
            <div class="form-group">
                <label for="nameChat">Name chat</label>
                <input type="text" id="nameChat" class="form-control" value="<%= invId %>" placeholder="name chat" />
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="visible" />
                <label class="custom-control-label" for="visible">Visible to everyone</label>
            </div>
            <div class="custom-control custom-checkbox" style="display: none;" id="namecheckbox">
                <input type="checkbox" class="custom-control-input" id="nameaschat" />
                <label class="custom-control-label" for="nameaschat">Path is /chats/<i>chat_name</i></label>
            </div>
            <hr>
            <button class="btn btn-outline-success" onclick="newChat();">Make chat</button>
        </div>
        <%- include partials/loginModal %>
        <script>
            const socket = io.connect($(location).attr("origin"));

            $('#createChat').dialog({
                autoOpen: false,
                modal: true,
                resizable: false,
                draggable: false,
                show: {
                    effect: "fade",
                    duration: 1000
                },
                hide: {
                    effect: "fade",
                    duration: 1000
                }
            });

            socket.on('logged-in', data => {
                (data.perms.includes('createChats')) ? $('#create').show() : $('#create').hide();
                (data.perms.includes('createChatByName')) ? $('#namecheckbox').show() : $('#namecheckbox').hide();
            });

            socket.on('createChatError', msg => alert(msg));

            function newChat() {
                socket.emit('newChat', { name: $('#nameChat').val(), visible: $('#visible').is(':checked'), nameAsPath: $('#nameaschat').is(':checked') });
                $('#createChat').dialog('close');
            }
        </script>
    </body>
</html>