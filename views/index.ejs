<!DOCTYPE html>
<html lang="en">
    <head>
        <title>ChatBx</title>
        <%- include partials/head %>
        <link rel="stylesheet" type="text/css" href="/css/cover.css" />
    </head>
    <body class="text-center">
        <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
            <header class="masthead mb-auto">
                <div class="inner">
                    <h3 class="masthead-brand">
                        <img src="/img/favicon/favicon-64x64.png" class="logo" />
                        ChatBx
                    </h3>
                    <nav class="nav nav-masthead justify-content-center" id="navbar">
                        <a class="nav-link active" href="/">Home</a>
                        <a class="nav-link" href="/chats">Chats</a>
                        <a class="nav-link" href="/emoji">Emoji</a>
                        <a class="nav-link" href="/about">About</a>
                        <a class="nav-link" href="/users">Users</a>
                        <a class="nav-link" href="/dev/home">Developers</a>
                    </nav>
                </div>
            </header>
            <main role="main" class="inner cover">
                <h1 class="cover-heading">ChatBx</h1>
                <p class="lead">Powerful chat app with API. Fast, beautiful and many features. This is completely free. <a href="/login" class="btn btn-outline-secondary">Login</a> or <a href="/register" class="btn btn-outline-secondary">Register</a></p>
                <p class="lead">
                    <a href="#" id="scrolldown" class="btn btn-lg btn-secondary">Learn more</a>
                </p>
            </main>
            <footer class="mastfoot mt-auto">
                <div class="inner">
                    <p>Footer</p>
                </div>
            </footer>
        </div>
        <div class="container text-left">
            <div class="row">
                <div class="col-sm-12">
                    <span style="margin-top: 100px;padding-bottom: 2000px;">Hello</span>
                </div>
            </div>
        </div>
        <%- include partials/scrollToTop %>
        <%- include partials/scripts %>
        <script>
            const socket = io.connect($(location).attr("origin"));

            let scrollBar = window.scrollbar = new SimpleBar($('body')[0]);

            $("#scrolldown").click(() => {
                $(scrollbar.getScrollElement()).animate({
                    scrollTop: $(".cover-container").height()
                }, 500);
            });

            $(scrollBar.getContentElement()).scroll(() => {
                if($(this).scrollTop() > 50) {
                    $('.masthead').addClass('fill');
                } else {
                    $('.masthead').removeClass('fill');
                }
            });
        </script>
    </body>
</html>
