<div id="login" title="login or register">
    <div class="row formcontainer">
        <div class="col-sm-6 login">
            <div>
                <h2>login</h2>
                <div class="form-group">
                    <label for="loginUsername">Username</label>
                    <input type="text" id="loginUsername" class="form-control" placeholder="Username" />
                </div>
                <div class="form-group">
                    <label for="loginPass">Password</label>
                    <input type="password" id="loginPass" class="form-control" placeholder="Password" />
                </div>
                <button class="btn btn-secondary" onclick="socket.emit('login', { username: $('#loginUsername').val(), password: $('#loginPass').val() });">Login</button>
            </div>
        </div>
        <div class="col-sm-6 register">
            <div>
                <h2>or register</h2>
                <div class="form-group">
                    <label for="regUsername">Username</label>
                    <input type="text" id="regUsername" class="form-control" placeholder="Username" onchange="checkUsername();" />
                    <small class="form-text text-muted">2-20 characters, 0-9, a-z, A-Z, _</small>
                </div>
                <div class="form-group">
                    <label for="regPass">Password</label>
                    <input type="password" id="regPass" class="form-control" placeholder="Password" onchange="checkPass();" />
                    <small class="form-text text-muted">8-20 characters, 0-9, a-z, A-Z, `~!@#$%^&*()-_=+[]{}\|/?.&gt;,&lt;:;"'</small>
                </div>
                <button id="submitReg" class="btn btn-success" onclick="socket.emit('register', { username: $('#regUsername').val(), password: $('#regPass').val() });" disabled>Register</button>
            </div>
        </div>
    </div>
</div>